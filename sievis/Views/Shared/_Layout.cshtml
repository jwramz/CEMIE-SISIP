<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SIEVIS</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />

    <script type="text/javascript" src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script> 
    @Scripts.Render("~/bundles/appjs")
   
</head>
<body>
    <div class="app-form">
        <div class="navbar navbar-default  navbar-fixed-top" role="navigation">
            <a href="~/Home/Index"><img src="~/Images/logo-cfe-sievis.png" class="app-logo" /></a>
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#mnuNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse" id="mnuNavbar">
                    @Html.Partial("_AppMenu")
                </div>
            </div>
        </div>
        <div class="container-fluid body-content">
            @RenderBody()
            <hr />
            <footer class="modal-footer" style="background-color: rgb(50, 50, 50); color: rgb(255, 255, 255); padding-top: 1.75rem; padding-bottom: 1.75rem;">
                <div class="col-md-6 col-md-offset-3 text-center">
                    <p>
                        INEEL / Todos los derechos reservados &copy; @DateTime.Now.Year
                        <br />
                        Direcci&oacute;n de Sistemas El&eacute;ctricos
                        <br />
                        Gerencia de Equipos El&eacute;ctricos
                    </p>
                </div>
            </footer>
        </div>
    </div>
    @Html.Partial("_LayoutModal")    
    @RenderSection("scripts", required: false)
  
</body>
</html>
