@using sievis.Models;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutML.cshtml";
    List<Subestacion> Subestaciones = ViewBag.Subestaciones;
}

<div class="gridCatalogContainer container">
    <h2>Subestaciones</h2>
    <div class="text-right">
        <span class="fa fa-plus-square fa-lg" aria-hidden="true"></span>
        @Html.ActionLink(" Agregar Subestación", "Agregar", "Subestacion", new { }, new { @class = "modal-link" })

        <span class="fa fa-home fa-lg" aria-hidden="true"></span>
        @Html.ActionLink(" Ir a Catálogos", "Catalogos", "Administracion", new { }, new { @class = "" })
    </div>
    <table id="gridCatalog" class="gridKendo">
        <colgroup>
            <col />
        </colgroup>
        <tr>
            <th>ID </th>
            <th>Gerencia </th>
            <th>Zona </th>
            <th>Subestación </th>
            <th>Acciones </th>
        </tr>
        @foreach (var item in Subestaciones)
        {
            <tr>
                <td>
                    @item.id
                </td>
                <td>
                    @item.Zona.Gerencia.nombre
                </td>
                <td>
                    @item.Zona.nombre
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.ActionLink(" ", "Editar", new { id = item.id }, new { @class = "modal-link fa fa-pencil-square-o", @title = "Editar" }) |
                    @Html.ActionLink(" ", "Detalle", new { id = item.id }, new { @class = "modal-link glyphicon glyphicon-list-alt", @title = "Detalles" }) |
                    @Html.ActionLink(" ", "Eliminar", new { id = item.id }, new { @class = "modal-link glyphicon glyphicon-trash", @title = "Eliminar" })
                </td>
            </tr>
        }
    </table>
</div>
@Html.Partial("_initKendoGrid")